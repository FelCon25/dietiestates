generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId     Int       @id @default(autoincrement())
  email      String    @unique
  role       String    @default("user")
  firstName  String
  lastName   String
  phone      String?
  provider   String    @default("local")
  profilePic String?
  password   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  sessions   Session[]
  admin      Admin?   

  @@map("users")
}

model Session {
  sessionId  Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [userId])
  userAgent  String
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@map("sessions")
}

model Admin {
  userId   Int   @id
  user     User  @relation(fields: [userId], references: [userId])

  @@map("admins")
}
